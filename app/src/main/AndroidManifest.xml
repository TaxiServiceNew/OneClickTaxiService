<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.darshanapriyasad.taxi_service">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".contextconnection.ContextConnection"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-permission android:name="android.permission.INTERNET" />

        <activity
            android:name=".MainWindow"
            android:label="@string/title_activity_main_window"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DriverDetail"
            android:label="@string/title_activity_driver_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HireTaxi"
            android:label="@string/title_activity_hire_taxi"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignUp"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyDetail"
            android:label="@string/title_activity_my_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HireDetail"
            android:label="@string/title_activity_hire_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
